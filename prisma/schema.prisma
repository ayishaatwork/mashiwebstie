datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int          @id @default(autoincrement())
  name        String
  images      String[]
  sizes       String[]
  description String
  variants    GSMVariant[]
}

model GSMVariant {
  id        Int            @id @default(autoincrement())
  gsm       String
  price     Int
  product   Product        @relation(fields: [productId], references: [id])
  productId Int
  colors    ColorVariant[]
}

model ColorVariant {
  id        Int        @id @default(autoincrement())
  name      String
  soldOut   Boolean   @default(false)
  variant   GSMVariant @relation(fields: [variantId], references: [id])
  variantId Int
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
  CANCELLED
  SHIPPED
  DELIVERED
}

model Order {
  id                 Int         @id @default(autoincrement())

  name               String
  email              String
  phone              String

  addressLine1       String
  addressLine2       String?
  city               String
  state              String
  postalCode         String
  country            String      @default("India")

  subtotal           Int
  shippingFee        Int
  totalAmount        Int

  status             OrderStatus @default(PENDING)
  paymentMethod      String?
  razorpayOrderId    String?
  razorpayPaymentId  String?
  razorpaySignature  String?

  items              OrderItem[]

  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id            Int      @id @default(autoincrement())

  orderId       Int
  order         Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId     Int
  productName   String
  image         String

  gsm           String
  color         String
  size          String

  unitPrice     Int
  quantity      Int
  totalPrice    Int

  createdAt     DateTime @default(now())

  @@index([orderId])
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
}