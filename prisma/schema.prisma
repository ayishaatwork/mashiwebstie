datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int          @id @default(autoincrement())
  name        String
  images      String[]
  sizes       String[]
  description String
  variants    GSMVariant[]
}

model GSMVariant {
  id        Int            @id @default(autoincrement())
  gsm       String
  price     Int
  product   Product        @relation(fields: [productId], references: [id])
  productId Int
  colors    ColorVariant[]
}

model ColorVariant {
  id        Int        @id @default(autoincrement())
  name      String
  soldOut   Boolean   @default(false)
  variant   GSMVariant @relation(fields: [variantId], references: [id])
  variantId Int
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
}